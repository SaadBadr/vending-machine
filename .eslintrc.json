{
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "env": {
      "node": true,
      "es6": true
    },  
    "plugins": ["prettier"],
    "extends": ["prettier"],
    "rules": {
      "no-undef": 1,
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  }
  